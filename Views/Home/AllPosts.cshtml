@model List<Post>


    <h1 style="text-align: center;" >
        <a href="">Chefs</a> |
        <a href="">Dishes</a>
    </h1>
    <h4 style="text-align: right;"><a href="">Add a Chef</a></h4>
    


<h2>Check out our Roster of chefs!</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Content</th>
            <th>Author</th>
            <th>Total Votes</th>
            <th>Last user to Vote</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var post in Model)
        {
           
            Vote lastVote = post.Votes.LastOrDefault();
            string lastToVote =(lastVote == null) 
            ?"N/A"
            : lastVote.Voter.FullName;
            
            <tr>
                <td>@post.Content</td>
                <td>@post.Creator.FirstName</td>
                <td>@post.Votes.Count</td>
                <td>@lastToVote</td>

            </tr>
        }
    </tbody>
</table>